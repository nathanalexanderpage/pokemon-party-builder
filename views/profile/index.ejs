<h1 class="center">
  Dashboard
</h1>

<div class="row">
  <div class="col s12">
    <h4><strong>Logged in as user:</strong> <%= user.username %> <%= user.lastname %></h4>
    <p><strong>Status:</strong> <%= user.admin ? 'Admin' : 'User' %></p>
    <p><strong>Member since:</strong> <%= user.createdAt %></p>
    <hr>
    <p><%= user.bio %></p>
  </div>
</div>
<div class="container row">
  <h2>Recent Pok√©mon</h2>
  <% results.forEach((species, i) => { %>
    <% let dexNo = `${10 > (species.dexId) ? `00${species.dexId}` : 100 > (species.dexId) ? `0${species.dexId}` : species.dexId}` %>
    <div class="row">
      <div class="tight-fit">
        <!--<div class="inlineitem">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <i class="material-icons">add</i>
          </button>
        </div>-->
        <a type="submit" name="action" href="/profile/pokemon/<%= species.id %>">
          <div class="inlineitem">
            <img src="https://www.serebii.net/pokedex-xy/icon/<%= dexNo %>.png" alt="<%= species.name %> sprite">
          </div>
          <div class="inlineitem">
            <p class="nomargin"><%= dexNo %> <%= species.nickname %></p>
          </div>
        </a>
      </div>
    </div>
    <% }) %>
</div>
